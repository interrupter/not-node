{
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"node": true,
		"mongo": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab", {
				"SwitchCase": 0
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"error",
			"always"
		],
		"no-useless-escape": [0]
	}
}
