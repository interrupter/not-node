{
	"parserOptions": {
        "ecmaVersion": 7
	},
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
		"mongo": true,
		"mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
